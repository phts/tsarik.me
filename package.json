{
  "name": "tsaryk.com",
  "private": true,
  "scripts": {
    "build": "npm run build:prod --",
    "build:dev": "npm run webpack",
    "build:prod": "npm run webpack -- --env.prod",
    "build:prod:relative": "npm run build:prod -- --env.relative",
    "clean": "rimraf ./dist",
    "deploy:dev": "node ./scripts/deploy-dev.js",
    "deploy:prod": "node ./scripts/deploy-prod.js",
    "eslint": "eslint .",
    "fix": "npm run tslint -- --fix",
    "lint": "npm run tslint && npm run eslint",
    "prebuild:dev": "npm run clean",
    "prebuild:prod": "npm run clean",
    "serve": "ws --directory ./dist --spa ./index.html --port 8080",
    "start": "npm run start:dev",
    "start:dev": "npm run webpack-dev-server --",
    "start:dev:external": "npm run start:dev -- --host 0.0.0.0",
    "start:prod": "npm run build && npm run serve",
    "test": "jest",
    "tslint": "tslint -p ./tsconfig.json",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server"
  },
  "engines": {
    "node": ">= 7.6"
  },
  "dependencies": {
    "browser-locale": "^1.0.3",
    "date-fns": "^1.29.0",
    "emailjs-com": "^2.1.1",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.4",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "rambdax": "^0.6.9",
    "ramda": "^0.25.0",
    "react-router-dom": "^4.2.2",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@phts/eslint-config": "^1.3.0",
    "@phts/tslint-config": "^0.2.0",
    "@types/jest": "^23.3.13",
    "@types/mockdate": "^2.0.0",
    "@types/ramda": "^0.25.2",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "@types/react-router-dom": "^4.2.3",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-date-fns": "^0.2.1",
    "babel-plugin-ramda": "^2.0.0",
    "eslint": "^5.9.0",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^1.1.11",
    "gh-pages": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "jest": "^24.0.0",
    "local-web-server": "^2.3.0",
    "mockdate": "^2.0.2",
    "rimraf": "^2.6.3",
    "shell-escape": "^0.2.0",
    "svg-react-loader": "^0.4.6",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.29.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "jest": {
    "transform": {
      "^.+rambdax.cjs.js": "<rootDir>/config/jest-empty-preprocessor.js",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^app/(.*)": "<rootDir>/src/app/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(rambdax)/)"
    ]
  }
}
