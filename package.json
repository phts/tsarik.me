{
  "name": "tsarik.me",
  "private": true,
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "npm run webpack",
    "build:prod": "npm run webpack -- --env.prod",
    "build:prod:bb": "npm run build:prod -- --env.bb",
    "clean": "rimraf ./dist",
    "fix": "npm run tslint -- --fix",
    "lint": "npm run tslint",
    "prebuild": "npm run clean",
    "prebuild:dev": "npm run clean",
    "prebuild:prod": "npm run clean",
    "prebuild:prod:bb": "npm run clean",
    "serve": "ws --directory ./dist --spa ./index.html --port 8080",
    "start": "npm run start:dev",
    "start:dev": "npm run webpack-dev-server --",
    "start:dev:external": "npm run start:dev -- --host 0.0.0.0",
    "start:prod": "npm run build && npm run serve",
    "test": "jest",
    "tslint": "tslint -p ./tsconfig.json",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server"
  },
  "engines": {
    "node": ">= 7.6"
  },
  "dependencies": {
    "browser-locale": "^1.0.3",
    "date-fns": "^1.29.0",
    "emailjs-com": "^2.1.1",
    "mobx": "^3.3.1",
    "mobx-react": "^4.3.4",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "rambdax": "^0.6.9",
    "ramda": "^0.25.0",
    "react-router-dom": "^4.2.2",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/mockdate": "^2.0.0",
    "@types/ramda": "^0.25.2",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "@types/react-router-dom": "^4.2.3",
    "awesome-typescript-loader": "^5.0.0-0",
    "babel-core": "^6.26.0",
    "babel-plugin-date-fns": "^0.1.0",
    "babel-plugin-ramda": "^1.4.3",
    "babel-preset-env": "^1.6.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.6",
    "jest": "^21.2.1",
    "local-web-server": "^2.3.0",
    "mockdate": "^2.0.2",
    "rmrf": "^1.0.2",
    "ts-jest": "^21.2.1",
    "tslint": "^5.8.0",
    "tslint-loader": "https://github.com/wbuchwalter/tslint-loader.git#093230076f3b453c4f8b7aa2ee074932aa109e84",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.1.0",
    "webpack-bundle-analyzer": "^2.11.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "transform": {
      "^.+rambdax.cjs.js": "<rootDir>/config/jest-empty-preprocessor.js",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.test\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^app/(.*)": "<rootDir>/src/app/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(rambdax)/)"
    ]
  }
}
